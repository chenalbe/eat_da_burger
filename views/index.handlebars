
<h2>Burgers waiting to be eaten!</h2>

<ul>
  {{#each burger}}
    {{#unless eaten}}
      <li>
	{{name}}

	<button class="change-eaten" data-id="{{id}}" data-eatStatus=0>
		{{#if eaten}}Reorder!{{else}}Feast Time!{{/if}}
	</button>
</li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been eaten!</h2>

<ul>
  {{#each burger}}
    {{#if eaten}}
      <li>
	{{name}}

	<button class="change-reorder" data-id="{{id}}" data-eatStatus=1>
		{{#if eaten}}Reorder!{{else}}Feast Time!{{/if}}
	</button>
</li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a new Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">What kind of burger?</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="eat">Eaten yet?</label><br>
    <input type="radio" name="eaten" value="1" checked> Yes!<br>
    <input type="radio" name="eaten" value="0"> Not Yet!
  </div>

  <button type="submit">Add Burger</button>
</form>
